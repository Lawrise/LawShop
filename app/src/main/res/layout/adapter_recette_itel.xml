<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/very_large_margin">

    <ImageView
        android:id="@+id/recette_img"
        android:layout_width="137dp"
        android:layout_height="122dp"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="@dimen/very_large_margin"
        android:background="@drawable/background_img_recette"
        android:src="@drawable/img_spaghetti" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_margin">

        <TextView
            android:id="@+id/nom_recette"
            android:layout_width="135dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/name_default_recette"
            android:textSize="@dimen/size_text_description" />

        <TextView
            android:id="@+id/price"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom_recette"
            android:layout_marginLeft="16dp"
            android:background="@color/beige"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="AJOUTER"
            android:textSize="@dimen/size_text_btn"
            android:textAlignment="center"/>
    </RelativeLayout>
</LinearLayout>